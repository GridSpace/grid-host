#!/bin/bash

host=${1}
file=${2}
name=${3}
port=${4:31625}

usage() {
    echo "usage: n2-util [host] [file] [name]"
    exit
}

[ -z ${host} ] || [ -z ${file} ] || [ -z ${name} ] && usage

(
    date
    echo "n2-util ${host} ${file}"
    node lib/n2.js print "${file}" "${host}" "${port}" "${name}"
    code=$?
    exit $code
) || exit 1
