#!/bin/bash

host=${1}
file=${2}
name=${3}

usage() {
    echo "usage: n2-print [host] [file] [name]"
    exit
}

[ -z ${host} ] || [ -z ${file} ] || [ -z ${name} ] && usage

(
    date
    echo "n2-print ${host} ${file}"
    node bin/n2-util.js send "${file}" "${host}" 31626 "${name}"
    node bin/n2-util.js print "/home/root/${name}" "${host}" 31625
    code=$?
    exit $code
) || exit 1
